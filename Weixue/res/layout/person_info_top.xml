<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/person_bg"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/user_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_lever"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_showUser_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_sign"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="开心每一天"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="20dp"
            android:background="@drawable/reg_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <!-- 第一条柱 -->

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_learnMoney"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <View
                android:id="@+id/v_showLearnMoney"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:background="#458ED9" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="@string/learnmoney"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>
        <!-- 第二条柱 -->

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_learnCents"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <View
                android:id="@+id/v_showLearnCents"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:background="#FFFC12" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="@string/learncents"
                android:textColor="@color/black"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>