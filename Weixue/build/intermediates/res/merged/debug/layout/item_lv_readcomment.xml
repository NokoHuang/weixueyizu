<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
         android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/userMsgImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
           
            android:src="@drawable/liimg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="小刘子很man(这是事实)" />

        <TextView
            android:id="@+id/content"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man小刘子很man" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"           
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
                android:textColor="@color/black"               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commtenttime" />
            <TextView
                android:id="@+id/time"
                android:textColor="@color/black"
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013-8-19" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="fill_parent"  
    android:layout_height="3dp"
    android:gravity="center"  
    android:orientation="vertical" >  
  
      
  
</LinearLayout>  
    <ImageView  
        android:layout_width="fill_parent"  
        android:layout_height="1dp"  
        android:background="@drawable/divide" /> 
</LinearLayout>

